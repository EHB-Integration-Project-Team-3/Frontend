@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid">
    <div class="row">
        <div id="carouselExampleControls" class="carousel slide animate__animated animate__bounceInLeft" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/Events/Events_Blue.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/Events/Events_Background.png" alt="Second slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Terug</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Volgende</span>
            </a>
        </div>
    </div>
    <div class="row d-flex justify-content-center my-5">
        <button class="btn btn-outline-secondary mx-2" onclick="location.href='@Url.Action("Overview", "Event")'"><h1 class="display-4"><img src="~/images/Events/party.png" />Events</h1></button>
        @{ if (Integration_Project.Extensions.HttpHelper.CheckLoggedUser() != null) {
                <button class="btn btn-outline-secondary mx-2" onclick="location.href='@Url.Action("Create", "Event")'"><h1 class="display-4">Event Toevoegen</h1></button>
            }
        }
    </div>
</div>
