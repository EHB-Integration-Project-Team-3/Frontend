@model InternalUser
<div class="container">
    <div class="row">
        <div class="col-6 justify-content-center">
            @*<img src=@Model.photo alt="profile picture" class="profile">*@
            <img src="~/Images/placeholder.jpg" alt="profile picture" class="profile">
        </div>
        <div class="col-6">
            <form>
                <div class="form-group">
                    <label for="email">Email:</label><br>
                    <input type="text" id="email" name="email" value=@Model.EmailAddress><br>
                </div>
                <div class="form-group">
                    <label for="firstname">Voornaam:</label><br>
                    <input type="text" id="firstname" name="firstname" value=@Model.FirstName><br>
                </div>
                <div class="form-group">
                    <label for="lastname">Achternaam:</label><br>
                    <input type="text" id="lastname" name="lastname" value=@Model.LastName><br>
                </div>
                <input type="submit" value="opslaan" id="submit">
            </form>
        </div>
    </div>
</div>