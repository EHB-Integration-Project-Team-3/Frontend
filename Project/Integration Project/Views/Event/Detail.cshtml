
@using Integration_Project.Extensions

@{
    var user = HttpHelper.CheckLoggedUser();
}

@model Event


<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="form-group col-12">
            <label for="title">Naam:</label><br>
            <input type="text" id="title" name="title" value=@Model.Title class="col-12" style="height:40px"><br>
        </div>
        <div class="form-group col-12">
            <label for="description">Beschrijving:</label><br>
            <input type="text" id="description" name="description" value=@Model.Description class="col-12" style="height:40px"><br>
        </div>
        <div class="form-group col-12">
            <label for="start">Begin:</label><br>
            <input type="date" id="start" name="start" value=@Model.Start.ToString("yyyy-MM-dd") class="col-12" style="height:40px"><br>
        </div>
        <div class="form-group col-12">
            <label for="end">Einde:</label><br>
            <input type="date" id="end" name="end" value=@Model.End.ToString("yyyy-MM-dd") class="col-12" style="height:40px"><br>
        </div>
        @if (Model.OrganiserId == (user != null ? user.Uuid : Guid.NewGuid())) {
        @if (user.Uuid == Model.OrganiserId) {
                <a href="@Url.Action("Edit", "Event", new { @Id = Model.Id } )"><i class="fa fa-edit"></i></a>
            }
        }
    </div>
</div>

